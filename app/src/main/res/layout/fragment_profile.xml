<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.profile.ProfileFragment"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/upper_profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/upper_profile"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:background="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_margin="0dp"
        android:padding="0dp">

        <ImageButton
            android:id="@+id/profile_statistics_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_statistics"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/profile_achievements_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_achievement"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/profile_human_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_human"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/profile_food_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_food"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/profile_settings_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_settings"
            android:background="@null"/>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/profile_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


</LinearLayout>
